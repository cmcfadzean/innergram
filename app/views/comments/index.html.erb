<div class="gram-heading">
  <div class="gram-heading__left">
    <%= link_to posts_path do %>
      <i class="fas fa-arrow-left"></i>
    <% end %>
  </div>
  <div class="gram-heading__body">
    <div class="gram-heading__title">Comments</div>
  </div>
  <div class="gram-heading__right">
    <%= link_to edit_post_path(@post) do %>
      <i class="fas fa-pencil-alt"></i>
    <% end %>
    <%= link_to @post, method: :delete, data: { confirm: 'Are you sure?' } do %>
      <i class="fas fa-trash"></i>
    <% end %>
  </div>
</div>

<%= render 'components/post', post: @post %>

<% @comments.each do |comment| %>
  <div class="comment">
    <div class="comment__body">
      <strong><%= comment.user.email %>: </strong><%= comment.body %>
    </div>
    <%= link_to 'Edit', edit_post_comment_path(comment.post, comment) %>
    <%= link_to 'Delete', [comment.post, comment], method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>

<%= link_to 'New Comment', new_post_comment_path(params[:post_id]) %>