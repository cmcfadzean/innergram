<!DOCTYPE html>
<html>
  <head>
    <title>Innergram</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.css" >
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="gram-body">
    <div class="gram-content">
      <%= yield %>
    </div>
    <div class="gram-actions">
      <% if user_signed_in? %>
        <%= link_to posts_path do %>
          <i class="fas fa-home"></i>
        <% end %>
        <%= link_to new_post_path, class: "add" do %>
          <i class="far fa-plus-square"></i>
        <% end %>
        <%= link_to edit_user_registration_path do %>
          <i class="far fa-user"></i>
        <% end %>
      <% else %>
        <%= link_to "Sign up", new_user_registration_path  %>
        <%= link_to "Login", new_user_session_path  %>
      <% end %>
    </div>
    <p id="notice" class="notice <%= notice ? "notice-show" : ""%>"><%= notice %></p>
    <p id="alert" class="alert <%= alert ? "alert-show" : ""%>"><%= alert %></p>
  </body>
</html>
