<h1>Innergram</h1>
<% @posts.each do |post| %>
  <div class="gram-post">
    <h4 class="gram-post__user"><%= post.user.email %></h4>
    <%= link_to post_comments_path(post) do %><%= image_tag(post.photo.url(:lg), class: "gram-post__img", unless: post.photo.nil?) %><% end %>
    <div class="gram-post__actions">
      <%= link_to like_post_path(post), method: :put do %>
        <i class="far fa-heart"></i> <%= post.get_upvotes.size %>
      <% end %>
      <%= link_to post do %>
        <i class="far fa-comment"></i> <%= post.comments.size %>
      <% end %>
    </div>
    <div class="gram-post__body">
      <%= post.body %>
    </div>
    <div class="gram-post__date">
      <%= time_ago_in_words(post.created_at) %> ago
    </div>
  </div>
<% end %>
