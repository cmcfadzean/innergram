<h1>Innergram</h1>
<div class="feed">
  <% @posts.each do |post| %>
    <div class="post">
      <div class="post__user"><%= post.user.email %></div>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
      <%= link_to post_comments_path(post) do %><%= image_tag(post.photo.url(:lg), class: "post__img", unless: post.photo.nil?) %><% end %>
      <div class="post__actions">
        <%= link_to like_post_path(post), method: :put do %>
          <i class="far fa-heart"></i> <%= post.get_upvotes.size %>
        <% end %>
        <%= link_to post do %>
          <i class="far fa-comment"></i> <%= post.comments.size %>
        <% end %>
      </div>
      <div class="post__body">
        <%= post.body %>
      </div>
    </div>
  <% end %>
</div>

<%= link_to 'New Post', new_post_path %>
